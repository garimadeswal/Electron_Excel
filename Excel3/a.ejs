<html>
    <head>
       <title> Excel</title>
        <link rel="stylesheet" type="text/css" href="index.css">
      
    </head>
    <body>
        <div id="container">
        <div id="menu-bar">
            <div id="file-menu" data-content="file-menu-container">File</div>
            <div id="home-menu" data-content="home-menu-container">Home</div>
            <div id="data-menu" data-content="data-menu-container">Data</div>
            <div>View</div>
            <div>File</div>
            <div id="new">New</div>
            <div id="open"> Open</div>
            <div id='save'> Save</div>
        </div>

       
        <div id="menu-content-container">
            <div class="menu-group" id="file-menu-container">
                <div class="menu-row">0.1</div>
                <div class="menu-row">0.2</div>
            </div>
            <div class="menu-group" id="home-menu-container">
                <div class="menu-row" id="font-menu-container">
                    <select id="font-family">
                        <option value="Georgia">Georgia</option>
                        <option value="Arial">Arial</option>
                        <option value="Impact">Impact</option>
                        <option value="Tahoma">Tahoma</option>
                    </select>
                    <select id="font-size">
                        <option value="8">8</option>
                        <option value="10">10</option>
                        <option value="12">12</option>
                        <option value="14">14</option>
                    </select>
                </div>
            </div>
                <div class="menu-row">
                    <input id="bold" type="button" value="B">
                    <input id="italic" type="button" value="I">
                    <input id="underline" type="button" value="U">
                    <input id="bg-color" type="color" value="#FFFFFF">
                    <input id="text-color" type="color" value="#000000">
                </div>
                <div class="menu-row" id="alignment-menu-container">
                    <input id="top-align" prop-val="top" class="valign">
                    <input id="middle-align" prop-val="middle" class="valign">
                    <input id="bottom-align" prop-val="bottom" class="valign">
                </div>
            
            
            <div class="menu-group" id="data-menu-container">
                <div class="menu-row">
                    <div>3</div>
                    <div>3</div>
                    
                </div>
                <div class="menu-row">
                    <div>3g</div>
                    
                    <div>3f</div>
                    
                </div>
        </div>
        <div class="menu-group" id="data-menu-container">
            <div class="menu-row">3.5551</div>
            <div class="menu-row">3.2</div>
    </div>


        <div id="formula-bar">
            <input type="text" id='cell' >
            <div id="separator">:</div>
            <input type="text" id='formula' >
        </div>

        <div id="content-container">
            <div id='tl-cell'></div>

            <div id='first-row'>
                <% for(let i=0;i<col;i++){ %>
                    
                    <div class="cell"><%= String.fromCharCode('A'.charCodeAt(0)+i) %></div>
                <% } %>
            </div>
            <div id='first-col'>
                <% for(let i=0;i<row;i++){ %>
                    <div class="cell"><%= i+1 %></div>
                <% } %>
            </div>
            <div id='grid'>
                <% for(let i=0;i<row;i++){ %>
                    <div class="row">
                    <% for(let j=0;j<col;j++){ %>
                        <div class="cell" contenteditable="true">
                            
                        </div>
                    <% } %>
                </div>
                <% } %>
            </div>
        </div>
        
        <div id="sheet-bar">
            <div>Sheet 1</div>
            <div id="add">+</div>

        </div>

    </div>
    <script src="./index.js"></script>
    </body>
</html>